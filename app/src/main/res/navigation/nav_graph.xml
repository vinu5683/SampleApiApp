<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.avenger.nobrokerassignment.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.avenger.nobrokerassignment.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectedItemFragment"
            app:destination="@id/selectedItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectedItemFragment"
        android:name="com.avenger.nobrokerassignment.ui.fragments.SelectedItemFragment"
        android:label="fragment_selected_item"
        tools:layout="@layout/fragment_selected_item" />
</navigation>